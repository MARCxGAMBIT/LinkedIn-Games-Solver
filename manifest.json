{
  "manifest_version": 3,
  "name": "LinkedIn Games Solver",
  "version": "1.0",
  "description": "Extension to automatically solve LinkedIn games Queens and Tango",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/games/*"],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ],

  "web_accessible_resources": [{
     "matches": ["https://*.linkedin.com/*"],
     "resources": ["src/*"]
   }],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}