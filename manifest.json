{
  "manifest_version": 3,
  "name": "LinkedIn Games Helper",
  "version": "1.0",
  "description": "Helper extension for LinkedIn Queens and Tango games",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "web_accessible_resources": [{
     "matches": ["https://*.linkedin.com/*"],
     "resources": ["src/*"]
   }],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}